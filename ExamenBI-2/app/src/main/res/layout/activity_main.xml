<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnCrearGenero"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="155dp"
        android:layout_height="62dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="105dp"
        android:background="@drawable/btn_rounded_background"
        android:text="Crear GÃ©nero"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/lst_view_mostrar_genero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.867"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#A40606" />

    <ListView
        android:id="@+id/lst_view_mostrar_genero"
        android:layout_width="342dp"
        android:layout_height="308dp"
        android:layout_marginTop="272dp"
        android:layout_marginBottom="186dp"
        android:autoSizeMaxTextSize="100dp"
        android:autoSizeMinTextSize="15dp"
        android:autoSizeStepGranularity="2dp"
        android:autoSizeTextType="uniform"
        android:background="#EAEAEA"
        android:gravity="center"
        android:rotationX="0"
        android:textSize="34sp"
        android:textStyle="bold"
        app:circularflow_defaultRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965">

    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>