<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerGenero">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="178dp"
        android:layout_height="43dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="157dp"
        android:gravity="center"
        android:text="Artistas"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@+id/lst_view_mostrar_artista"
        app:layout_constraintEnd_toStartOf="@+id/btnCrearArtista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCrearArtista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="616dp"
        android:background="@drawable/btn_rounded_background"
        android:text="Crear Artista"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ListView
        android:id="@+id/lst_view_mostrar_artista"
        android:layout_width="368dp"
        android:layout_height="300dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="298dp"
        android:background="#EDE7F6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCrearArtista" />
</androidx.constraintlayout.widget.ConstraintLayout>